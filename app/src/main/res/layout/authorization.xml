<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:weightSum="10"
    >
    <include layout="@layout/title_bar" />

    <TextView
        android:id="@+id/lblAuth_LotNo"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/button_background"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Scan Barcode"
        />
    <EditText
        android:id="@+id/txtAuth_LotNo"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:textAlignment="center"
        android:maxLines="1"
        android:inputType="text"
        android:nextFocusDown="@id/txtAuth_ReWorkQty"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblAuth_ReWorkQty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/button_background"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Re-Work Qty"
            />
        <TextView
            android:id="@+id/lblAuth_Wastage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/button_background"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Wastage"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/txtAuth_ReWorkQty"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:textAlignment="center"
            android:maxLines="1"
            android:inputType="number"
            android:text="0"
            android:nextFocusDown="@id/txtAuth_Wastage"
            android:selectAllOnFocus="true"
            />
        <EditText
            android:id="@+id/txtAuth_Wastage"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:textAlignment="center"
            android:maxLines="1"
            android:inputType="number"
            android:text="0"
            android:selectAllOnFocus="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cmdAuth_Authorize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center"
            android:text="Authorize"
            android:layout_marginRight="1dp"
            android:background="@color/button_background"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/cmdAuth_Decline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center"
            android:text="Decline"
            android:layout_marginRight="1dp"
            android:background="@color/button_background"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

    </LinearLayout>

    <View android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"

        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cmdci_Back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center"
            android:text="Back"
            android:layout_marginRight="1dp"
            android:background="@color/button_background"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

    </LinearLayout>

</LinearLayout>
