<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:weightSum="7.5"
    >
    <include layout="@layout/title_bar" />
    <Button
        android:id="@+id/cmdColor_AR"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="Color"
        android:background="@color/button_background"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <EditText
        android:id="@+id/txtRemarks_AR"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:maxLines="2"
        android:inputType="text"
        android:hint="Description Type here!"
        android:background="@color/white"
        android:layout_marginTop="10dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="top|left"
        />
    <TextView
        android:id="@+id/txtCharacters"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:maxLines="1"
        android:text="110"
        android:textStyle="bold"
        android:textSize="14sp"
        android:maxLength="110"
        android:textColor="@color/white"
        android:background="@color/button_background"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        />
    <View android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cmdBack_AR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center"
            android:text="Back"
            android:layout_marginRight="1dp"
            android:background="@color/button_background"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/cmdFinish_AR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center"
            android:text="Finish"
            android:background="@color/button_background"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

    </LinearLayout>
</LinearLayout>
